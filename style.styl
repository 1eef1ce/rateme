font = Verdana, Geneva, sans-serif
font-size = 1rem
black = #010101
lightblue = #bbb9fc

body
  font-size font-size
  font-family font
  color black
  line-height normal

input
textarea
  outline none
  box-shadow none !important
  resize none

button
a
  &:focus
    outline none
    box-shadow none

.row
  &:before
  &:after
    display inline-block !important
    content normal

.container
  max-width 960px
  padding 0

a
  color white
  &:hover
  &:focus
    color white
    text-decoration none

.main
  background url("images/bg.png") no-repeat center

.bold
  font-weight bold

.white
  color white

.lightblue
  color lightblue

.bg-red
  background-color #ff595d

p
  margin-bottom 2rem

h5
  font-size 1.125rem
  margin-bottom 43px

.small
  font-size 0.75rem
  text-transform uppercase
  margin 1.75rem 0 0.75rem

.download
  display inline-block
  font-size 1.125rem
  border-radius 5px
  padding 16px 20px
  margin-top 10px
  line-height 1
  img
    margin-right 11px

.block-top
  padding 135px 0 36px
  background url("images/line.png") no-repeat bottom
  margin-bottom 100px

.logo
  margin-bottom 2.25rem

.block-1
  margin-bottom 122px

.block-2
  margin-bottom 136px

.block-3
  margin-bottom 346px

.nav
  margin-bottom 31px

.nav-link
  padding: 12px
  border-radius 5px !important
  color black
  background-color white
  margin 0 3px
  &.nav-item
    &:hover
      background-color #ff595d
  img
    margin-right 10px
  &:first-of-type
    margin-left 0
  &:last-of-type
    margin-right 0

.nav-pills
  .nav-link.active
    background-color #ff595d
  .show>.nav-link
    color black
    background-color white

.dropdown
  .nav-link
    padding 14px
    margin 0 5px
    text-align left
    &:hover
      color inherit
    &:after
      float right
      margin-left 0
      margin-top 0.5em
  &:first-of-type
    .nav-link
      margin-left 0
  &:last-of-type
    .nav-link
      margin-right 0