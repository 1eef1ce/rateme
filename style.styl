font = CeraPro
font-size = 1rem
colorDark = #010101
colorLight = #bbb9fc
colorHover = #ff595d
colorBody = #f7fbfe
colorTh = #bec3c9
colorDropdown = #747373
colorOrange = #de4a35
colorTop = #252525

@font-face
  font-family CeraPro
  src url(fonts/CeraPro-Regular.woff2) format('woff2'),
  url(fonts/CeraPro-Regular.woff) format('woff')

body
  font-size font-size
  font-family font
  color colorDark
  line-height normal
  background-color colorBody

input
textarea
  outline none
  box-shadow none !important
  resize none

button
a
  &:focus
    outline none
    box-shadow none

.row
  &:before
  &:after
    display inline-block !important
    content normal

.container
  max-width 960px
  padding 0

a
  color white
  &:hover
  &:focus
    color white
    text-decoration none

.main
  background url("images/bg.png") no-repeat top center
  background-size 100% 70%
  padding-bottom 100px

.bold
  font-weight bold

.white
  color white

.colorLight
  color colorLight

.orange
  color colorOrange
  
p
  margin-bottom 2.5rem

h3
  margin-bottom 3.5rem

h5
  font-size 1.125rem
  margin-bottom 43px

.small
  font-size 0.75rem
  text-transform uppercase
  margin 0.75rem 0

.download
  display inline-block
  font-size 1.125rem
  border-radius 5px
  padding 16px 20px
  line-height 1
  background-color white
  color colorDark
  box-shadow 35px 0 70px rgba(84,74,69, 0.31)
  img
    width 18px
    margin-right 11px
  &:hover
    background-color colorHover
    color white
    transition 0.3s ease-in-out

.block-top
  padding 135px 0 36px
  background url("images/line.png") no-repeat bottom
  margin-bottom 100px

.logo
  margin-bottom 3.5rem

.block-1
  margin-bottom 80px

.block-2
  margin-bottom 136px

.block-3
  margin-bottom 46px

.nav
  margin-bottom 31px

.nav-pills
  .nav-link
    padding 12px
    border-radius 5px !important
    color colorDark
    background-color white
    margin 0 3px
    box-shadow 35px 0 70px rgba(84,74,69, 0.31)
    &.nav-item
      &:hover
        background-color colorHover
        transition 0.3s ease-in-out
    img
      margin-right 10px
    &:first-of-type
      margin-left 0
    &:last-of-type
      margin-right 0
    &.active
      background-color colorHover
    &.show>.nav-link
      color colorDark
      background-color white

.nav-tabs
  border-bottom none
  .nav-item
    margin 0 3px
    &:first-of-type
      margin-left 0
    &:last-of-type
      margin-right 0
    .nav-link
      padding 12px
      color colorDark
      border-bottom 3px solid gainsboro
      &:focus
      &:hover
        border-color transparent transparent colorHover
        color colorHover
      &.active
        color colorHover
        background-color transparent
        border-color transparent transparent colorHover

.dropdown
  &.nav-item
    margin 0 5px
    &:first-of-type
      margin-left 0
    &:last-of-type
      margin-right 0
  .nav-link
    padding 14px
    text-align left
    &:hover
      color inherit
    &:after
      float right
      margin-left 0
      margin-top 0.5em

table
  background-color white
  thead
    th
      text-transform uppercase
      color colorTh
  th
  td
    padding 25px 0!important

.table-hover
  tbody
    tr
      &:hover
        transform scale(1)
        color inherit
        background-color white
        box-shadow 1px 0 70px rgba(148,184,209,0.31)
      td
        img
          margin-right 10px
          max-height 22px

.dropdown-menu
  margin -4px 0 0
  border 0
  border-radius 0 0 5px 5px
  width 100%
  padding 19px 0 15px
  box-shadow 35px 43px 70px rgba(84,74,69, 0.31)

.dropdown-item
  color colorDropdown
  padding 1rem 2rem
  &:hover
  &:focus
    color colorDark
    background-color transparent

.top
  color white
  background-color colorTop
  padding 20px 0
  position fixed
  top 0
  width 100%
  z-index 1

.closeIcon
  float right
  cursor pointer

.menu
  a
    &:hover
      color colorHover

.tab-content
  margin-bottom 3rem